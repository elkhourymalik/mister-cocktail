<div class="bg-lighter-grey padded">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="box">
          <% @cocktails.each do |cocktail| %>
            <div class="card_white min_200">
              <%= link_to(cocktail_path(cocktail)) do %>
                <%= cocktail.name %>
              <% end %>
              <% if cocktail.user == current_user %>
                <%= link_to(edit_cocktail_path(cocktail)) do %>
                  <i class="fa fa-pencil" id="edit"></i>
                <% end %>
                <%= link_to(cocktail_path(cocktail), method: :delete, data: {confirm: "Are you sure?"}) do %>
                  <i class="fa fa-trash-o" id="delete"></i>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
